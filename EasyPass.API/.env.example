# EasyPass API Environment Variables
# Copy this file to .env and set your production values

# JWT Configuration (REQUIRED)
Jwt__Key=your-super-secure-jwt-key-at-least-32-characters-long

# Encryption Configuration (REQUIRED) 
Encryption__Key=your-super-secure-encryption-key-for-aes256

# Database Configuration (REQUIRED)
ConnectionStrings__DefaultConnection=Server=your-server;Database=EasyPassDB;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# Optional: Override JWT settings
# Jwt__Issuer=EasyPass
# Jwt__Audience=EasyPass

# Development vs Production
ASPNETCORE_ENVIRONMENT=Production