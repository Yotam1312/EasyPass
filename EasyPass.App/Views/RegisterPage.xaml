<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EasyPass.App.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Register">

    <VerticalStackLayout Padding="30" Spacing="20">

        <!-- Header -->
        <Label Text="Create Account"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="Fill in the details below to register"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <!-- Email Entry -->
        <Entry x:Name="EmailEntry"
               Placeholder="Email"
               Keyboard="Email" />

        <!-- PIN Entry -->
        <Entry x:Name="PinEntry"
               Placeholder="PIN (4+ digits)"
               IsPassword="True"
               Keyboard="Numeric" />

        <!-- Confirm PIN Entry -->
        <Entry x:Name="ConfirmPinEntry"
               Placeholder="Confirm PIN"
               IsPassword="True"
               Keyboard="Numeric" />

        <!-- Error Label (shown when validation fails) -->
        <Label x:Name="ErrorLabel"
               TextColor="Red"
               IsVisible="False"
               FontSize="14"
               HorizontalOptions="Center" />

        <!-- Loading Indicator (shown during API call) -->
        <ActivityIndicator x:Name="LoadingIndicator"
                          IsRunning="False"
                          IsVisible="False"
                          Color="#4B24D4"
                          HeightRequest="40" />

        <!-- Register Button -->
        <Button x:Name="RegisterButton"
                Text="Create Account"
                Clicked="OnRegisterClicked"
                BackgroundColor="#4B24D4"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50" />

        <!-- Back to Login Button -->
        <Button Text="Back to Login"
                Clicked="OnBackToLoginClicked"
                BackgroundColor="#4DA6FF"
                TextColor="White"
                FontSize="16"
                CornerRadius="10"
                HeightRequest="45"
                Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>
