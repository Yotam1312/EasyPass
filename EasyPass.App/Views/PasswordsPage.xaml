<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyPass.App.Views.PasswordsPage"
             Title="My Passwords">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="My Passwords ðŸ”"
               FontSize="28"
               HorizontalOptions="Center" />

        <Entry x:Name="SearchEntry"
               Placeholder="Search by app or website..."
               TextChanged="OnSearchTextChanged" />

        <Button Text="Add New Password"
                Clicked="OnAddPasswordClicked"
                BackgroundColor="#0078D4"
                TextColor="White" />

        <Button Text="Generate Strong Password"
                Clicked="OnGeneratePasswordClicked"
                BackgroundColor="#28A745"
                TextColor="White" />

        <!-- My Passwords Button -->
        <Button Text="My Passwords"
                Clicked="OnMyPasswordsClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="20"
                HeightRequest="55"
                Margin="0,0,0,10" />

        <CollectionView x:Name="PasswordsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Service}" FontAttributes="Bold" />
                            <Label Text="{Binding Username}" />
                            <Label Text="{Binding EncryptedPassword}" TextColor="Gray" />
                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        BackgroundColor="#FFA500"
                                        TextColor="White"
                                        Clicked="OnEditPasswordClicked"
                                        CommandParameter="{Binding Id}" />
                                <Button Text="Delete"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding Id}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
