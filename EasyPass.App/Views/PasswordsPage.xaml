<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyPass.App.Views.PasswordsPage"
             Title="My Passwords">

    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Styles/AppStyles.xaml" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          Padding="{StaticResource SpacingMedium}">

        <!-- Search and Actions Section -->
        <StackLayout Grid.Row="0" Spacing="{StaticResource SpacingMedium}">
            <Label Text="Password Manager"
                   Style="{StaticResource HeaderLabel}"
                   HorizontalOptions="Center" />

            <Frame Style="{StaticResource PasswordCard}"
                   Padding="12">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <!-- Search Box -->
                    <Entry Grid.Column="0"
                           Style="{StaticResource BaseEntry}"
                           Placeholder="Search passwords..."
                           TextChanged="OnSearchTextChanged"
                           SemanticProperties.Hint="Search your saved passwords" />

                    <!-- Add Password Button -->
                    <Button Grid.Column="1"
                            Style="{StaticResource BaseButton}"
                            Text="Add"
                            Margin="8,0,0,0"
                            Clicked="OnAddPasswordClicked"
                            SemanticProperties.Hint="Add a new password" />

                    <!-- Generate Password Button -->
                    <Button Grid.Column="2"
                            Style="{StaticResource SecondaryButton}"
                            Text="Generate"
                            Margin="8,0,0,0"
                            Clicked="OnGeneratePasswordClicked"
                            SemanticProperties.Hint="Generate a strong password" />
                </Grid>
            </Frame>
        </StackLayout>

        <!-- Password List -->
        <CollectionView Grid.Row="1"
                        x:Name="PasswordsList"
                        Margin="0,8,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource PasswordCard}">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto">

                            <!-- Service Name -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Service}"
                                   Style="{StaticResource HeaderLabel}"
                                   FontSize="{StaticResource FontSizeLarge}" />

                            <!-- Username -->
                            <StackLayout Grid.Row="1" Grid.Column="0"
                                        Orientation="Horizontal">
                                <Label Text="Username: "
                                       Style="{StaticResource BaseLabel}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Username}"
                                       Style="{StaticResource BaseLabel}" />
                            </StackLayout>

                            <!-- Password -->
                            <StackLayout Grid.Row="2" Grid.Column="0"
                                        Orientation="Horizontal">
                                <Label Text="Password: "
                                       Style="{StaticResource BaseLabel}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding EncryptedPassword}"
                                       Style="{StaticResource BaseLabel}" />
                            </StackLayout>

                            <!-- Action Buttons -->
                            <StackLayout Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                       Spacing="8"
                                       VerticalOptions="Center">
                                <!-- Copy Button -->
                                <Button Style="{StaticResource BaseButton}"
                                        Text="Copy"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        HeightRequest="40"
                                        Clicked="OnCopyPasswordClicked"
                                        CommandParameter="{Binding .}"
                                        SemanticProperties.Hint="Copy password to clipboard" />

                                <!-- Edit Button -->
                                <Button Style="{StaticResource SecondaryButton}"
                                        Text="Edit"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        HeightRequest="40"
                                        Clicked="OnEditPasswordClicked"
                                        CommandParameter="{Binding Id}"
                                        SemanticProperties.Hint="Edit this password entry" />

                                <!-- Delete Button -->
                                <Button Style="{StaticResource DangerButton}"
                                        Text="Delete"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        HeightRequest="40"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding Id}"
                                        SemanticProperties.Hint="Delete this password entry" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center"
                           HorizontalOptions="Center">
                    <Label Text="No passwords found"
                           Style="{StaticResource HeaderLabel}"
                           HorizontalOptions="Center" />
                    <Label Text="Add your first password using the + button above"
                           Style="{StaticResource BaseLabel}"
                           HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
