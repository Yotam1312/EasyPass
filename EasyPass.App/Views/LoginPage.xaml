<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EasyPass.App.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Welcome to EasyPass" 
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry"
               Placeholder="Username"
               Keyboard="Default" />

        <Entry x:Name="PinEntry"
               Placeholder="PIN"
               IsPassword="True"
               Keyboard="Numeric" />

        <Label x:Name="ErrorLabel"
               TextColor="Red"
               IsVisible="False"
               FontSize="14"
               HorizontalOptions="Center" />

        <Button Text="Login"
        Clicked="OnLoginClicked"
        BackgroundColor="#4B24D4"
        TextColor="White"
        CornerRadius="10"
        HeightRequest="50" />


    </VerticalStackLayout>
</ContentPage>
