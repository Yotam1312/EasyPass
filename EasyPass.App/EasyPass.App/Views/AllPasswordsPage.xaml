<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyPass.App.Views.AllPasswordsPage"
             Title="All My Passwords">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="All My Passwords 🔐"
               FontSize="28"
               HorizontalOptions="Center" />
        <CollectionView x:Name="AllPasswordsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Service}" FontAttributes="Bold" />
                            <Label Text="{Binding Username}" />
                            <Label Text="{Binding EncryptedPassword}" TextColor="Gray" />
                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Edit"
                                        BackgroundColor="#FFA500"
                                        TextColor="White"
                                        Clicked="OnEditPasswordClicked"
                                        CommandParameter="{Binding Id}" />
                                <Button Text="Delete"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding Id}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>